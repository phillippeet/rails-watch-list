<p style="color: green; display: none"><%= notice %></p>

<div class="container mb-5">
  <h1 class="my-5">Movies</h1>
  <div id="movies">
    <div class="card-grid">
      <% @movies.each do |movie| %>
        <div class="card-category" style="background-image: linear-gradient(180deg, rgba(20,20,20,0) 30%, rgba(20,20,20,.99) 80%), url(<%= movie.poster_url %>)">
          <%= movie.title %>
          <%= link_to "Show this movie", movie %>
        </div>
      <% end %>
      <div class="card-category add-new">
        <%= link_to "Add a movie", new_movie_path %>
      </div>
    </div>
  </div>
</div>
